<?xml version="1.0" encoding="UTF-8"?>
<keyboard>

<!-- Diese Datei muss in das Verzeichnis /usr/local/share/matchbox-keyboard kopiert werden. -->

<layout id="default keyboard">
  <row>
    <space width="350" extended="true"/>

    <key obey-caps='true' fill='false'>
      <default display="^" action="xkeysym:dead_circumflex" />
      <shifted display="°" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="1" />
      <shifted display="!" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="2" />
      <shifted display='"' />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="3" />
      <shifted display="§" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="4" />
      <shifted display="$" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="5" />
      <shifted display="%" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="6" />
      <shifted display="&amp;" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="7" />
      <shifted display="/" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="8" />
      <shifted display="(" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="9" />
      <shifted display=")" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="0" />
      <shifted display="=" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="ß" />
      <shifted display="?" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="´" action="xkeysym:dead_acute" />
      <shifted display="`" action="xkeysym:dead_grave" />
    </key>

    <space width="50" extended="true"/>

    <key width="3000">
      <default display="image:/usr/local/share/matchbox-keyboard/key-backspace.png" action="backspace" />
    </key>
  </row>



  <row>
    <key width="2000" fill="false">
      <default display="Esc" action="escape" />
    </key>

    <key obey-caps='true' fill='false'>
      <default display="q" />
      <shifted display="Q" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="w" />
      <shifted display="W" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="e" />
      <shifted display="E" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="r" />
      <shifted display="R" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="t" />
      <shifted display="T" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="z" />
      <shifted display="Z" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="u" />
      <shifted display="U" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="i" />
      <shifted display="I" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="o" />
      <shifted display="O" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="p" />
      <shifted display="P" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="ü" />
      <shifted display="Ü" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="+" />
      <shifted display="*" />
    </key>

    <space width="50" extended="true"/>

    <key width="2500">
      <default display="image:/usr/local/share/matchbox-keyboard/return.png" action="return"/>
    </key>
  </row>



  <row>
    <key width="1500">
      <default display="image:/usr/local/share/matchbox-keyboard/arrows.png" action="tab" />
    </key>

    <key obey-caps='true' fill='false'>
      <default display="@" />
      <shifted display="€" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="a" />
      <shifted display="A" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="s" />
      <shifted display="S" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="d" />
      <shifted display="D" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="f" />
      <shifted display="F" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="g" />
      <shifted display="G" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="h" />
      <shifted display="H" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="j" />
      <shifted display="J" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="k" />
      <shifted display="K" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="l" />
      <shifted display="L" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="ö" />
      <shifted display="Ö" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="ä" />
      <shifted display="Ä" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="#" />
      <shifted display="'" />
    </key>

    <!-- anstelle einer Taste: -->
    <space width="1000" extended="true"/>

    <space width="950" extended="true"/>
  </row>



  <row>
    <key width="2000">
      <default display="image:/usr/local/share/matchbox-keyboard/shift.png" action="modifier:shift" />
      <caps display="image:/usr/local/share/matchbox-keyboard/shift_caps.png" action="modifier:shift" />
    </key>

    <key obey-caps='true' fill='false'>
      <default display="&lt;" action="xkeysym:less" />
      <shifted display="&gt;" action="xkeysym:greater" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="y" />
      <shifted display="Y" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="x" />
      <shifted display="X" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="c" />
      <shifted display="C" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="v" />
      <shifted display="V" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="b" />
      <shifted display="B" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="n" />
      <shifted display="N" />
    </key>
    <key obey-caps='true' fill='false'>
      <default display="m" />
      <shifted display="M" />
    </key>
    <key fill='false'>
      <default display="," />
      <shifted display=";" />
    </key>
    <key fill='false'>
      <default display="." />
      <shifted display=":" />
    </key>

    <key fill='false'>
      <default display="-" />
      <shifted display="_" />
    </key>

    <!-- anstelle einer Taste: -->
    <space width="1150" extended="true"/>


    <space width="50" extended="true"/>

    <key>
      <default display="↑" action="up" />
    </key>

    <space width="1200" extended="true"/>
  </row>




  <row>
    <space width="2500" extended="true"/>

    <key width="10250">
      <default display=" " action="space" />
    </key>

    <space width="1900" extended="true"/>

    <key>
      <default display="←" action="left" />
    </key>
    <key>
      <default display="↓" action="down" />
    </key>
    <key>
      <default display="→" action="right" />
    </key>
  </row>

</layout>

</keyboard>
